<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:ZasAndDasMobile.ViewModels"
             x:Class="ZasAndDasMobile.Views.MainPage"
             x:DataType="pageModels:MainPageViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="{Binding Rows}" />
        </Grid.RowDefinitions>
        <Image Source="babeslogo2.png"
                  HeightRequest="200"
                   Grid.Row="0"/>

            <ScrollView Grid.Row="1">
                
            <Border
                Padding="0"
                StrokeShape="RoundRectangle 40,40,40,40">
                <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
                    <CollectionView ItemsSource="{Binding PizzaList}" >
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="pageModels:PizzaViewModel">
                                <Border
                            Padding="30,30"
                            StrokeShape="RoundRectangle 40,40,40,40">
                                    <HorizontalStackLayout>
                                        <Image Source="pizza.png" WidthRequest="120"/>
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Name}" />
                                            <Label Text="{Binding Description}" />
                                            <HorizontalStackLayout>
                                                <Label Text="Price: " />
                                                <Label Text="{Binding Price}"  Padding="5,0"/>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>
            </ScrollView>
    </Grid>

</ContentPage>
