<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZasAndDasMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ZasAndDasMobile"
    Shell.FlyoutBehavior="Flyout"
    Title="ZasAndDasMobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Create"
        ContentTemplate="{DataTemplate local:CreateAccountPage}"
        Route="Create"/>
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="Login"/>

    <ShellContent
        Title="Pay"
        ContentTemplate="{DataTemplate local:PaymentPage}"
        Route="Payment"/>
    
    <ShellContent
        Title="CartCheckout"
        ContentTemplate="{DataTemplate local:CartPage}"
        Route="Cart"/>
</Shell>
